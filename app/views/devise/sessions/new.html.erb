<h1>Log in</h1>

<div class="body center_text">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <p><%= f.label :email %></p>
      <%= f.email_field :email, class: "text_input", autofocus: true %>
      <br/>

    <p><%= f.label :password %></p>
      <%= f.password_field :password, class: "text_input", autocomplete: 'off' %>
      <br/>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div><br/>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "button" %>
    </div>
  <% end %>
</div>
<div class="center_text">
  <%= render "devise/shared/links" %>
</div>
