<h1>New User</h1>

<div class="body center_text">
	<%= form_for @user do |f| %>
		<p><%= f.label :username %></p>
		<%= f.text_field :username, class: "text_input" %>
		<br/>

		<p><%= f.label :email %></p>
		<%= f.email_field :email, class: "text_input" %>
		<br/>

		<p><%= f.label :password %></p>
		<%= f.password_field :password, class: "text_input" %>
		<br/>

		<%= f.submit %>

	<% end %>
</div>
